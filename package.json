{
  "name": "taborganizer",
  "displayName": "TabOrganizer",
  "description": "Organize open editor tabs based on hierarchy",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tabOrganizer.organize",
        "title": "Organize Tabs by Hierarchy"
      },
      {
        "command": "tabOrganizer.toggleAutoOrganize",
        "title": "Toggle Auto-Organize Tabs"
      },
      {
        "command": "tabOrganizer.setStrategy",
        "title": "Tab Organizer: Set Sorting Strategy"
      }
    ],
    "configuration": {
      "title": "Tab Organizer",
      "properties": {
        "tabOrganizer.autoOrganize": {
          "type": "boolean",
          "default": false,
          "description": "Automatically organize tabs when they change"
        },
        "tabOrganizer.sortStrategy": {
          "type": "string",
          "enum": [
            "fileSystem",
            "imports",
            "alphabetical"
          ],
          "default": "fileSystem",
          "description": "Strategy for organizing tabs"
        },
        "tabOrganizer.aliasConfigFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "tsconfig.json",
            "tsconfig.app.json",
            "tsconfig.node.json",
            "jsconfig.json"
          ],
          "description": "Config files to check for path aliases (e.g., tsconfig.json, jsconfig.json). Files are checked in order until one with paths is found."
        }
      }
    },
    "keybindings": [
      {
        "command": "tabOrganizer.organize",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
